#!/bin/bash

# XCC Heat Pump Controller CLI Wrapper Script
# This script provides easy access to the XCC CLI tool with virtual environment activation

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Path to the Python CLI script
CLI_SCRIPT="$SCRIPT_DIR/xcc_cli.py"

# Path to virtual environment
VENV_PATH="$SCRIPT_DIR/venv"

# Check if virtual environment exists
if [ ! -d "$VENV_PATH" ]; then
    echo "❌ Virtual environment not found at $VENV_PATH"
    echo "Please run: python -m venv venv && source venv/bin/activate && pip install -r requirements.txt"
    exit 1
fi

# Check if CLI script exists
if [ ! -f "$CLI_SCRIPT" ]; then
    echo "❌ CLI script not found at $CLI_SCRIPT"
    exit 1
fi

# Activate virtual environment and run the CLI
source "$VENV_PATH/bin/activate"
python "$CLI_SCRIPT" "$@"
